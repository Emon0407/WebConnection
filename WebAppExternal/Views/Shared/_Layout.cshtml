<head>
  <meta charset="utf-8" />
  <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1" />
  <title>@ViewBag.Title</title>
  <meta name="description" content="" />
  <meta name="author" content="" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  @* // reference the minified version based on whether we are in debug mode. *@
  @if (CCE.WebConnection.WebAppExternal.MvcApplication.IsDebug) { 
    <link rel="stylesheet" href="@Url.Content("~/css/style.css?v=2")" />
  } 
  else {
    <link rel="stylesheet" href="@Url.Content("~/css/style.min.css?v=2")" />
  }
  @RenderSection("HeadContent", false)
  <script src="@Url.Content("~/js/libs/modernizr-2.0.min.js")" type="text/javascript"></script>
  <script src="@Url.Content("~/js/libs/respond.min.js")" type="text/javascript"></script>
  <script src="@Url.Content("~/js/libs/jquery-1.6.1.min.js")" type="text/javascript"></script> 
   <script src="@Url.Content("~/js/libs/jquery.unobtrusive-ajax.js")" type="text/javascript"></script>
</head>

<body>
  <div id="container">
        <header id="header">
            <div id="title"><h1>Database Connection Tester</h1></div>
            <div id="logindisplay">&nbsp;</div>
            <div id="menucontainer">
                <ul id="menu">
                    <li>@Html.ActionLink("Home", "Index", "Home")</li>
                </ul>

            </div>
        </header>
        <div id="main" role="main">@RenderBody()</div>
        <footer id="footer"></footer>    
  </div>
  @* // reference the minified version based on whether we are in debug mode. *@
  @if (CCE.WebConnection.WebAppExternal.MvcApplication.IsDebug) { 
  <script src="@Url.Content("~/js/script.js")"></script>
  } else { 
  <script src="@Url.Content("~/js/script.min.js")"></script>
  }
  <!-- ADDED: Page Level script sections -->
  @RenderSection("ScriptSection", false)  
  
  <!--[if lt IE 7 ]>
    <script src="@Url.Content("~/js/libs/dd_belatedpng.js")"></script>
    <script>DD_belatedPNG.fix('img, .png_bg'); // Fix any <img> or .png_bg bg-images. Also, please read goo.gl/mZiyb </script>
  <![endif]-->
</body>
</html>



