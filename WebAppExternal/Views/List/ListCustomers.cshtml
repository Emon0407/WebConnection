@model IEnumerable<CCE.WebConnection.DAL.EntityClasses.CustomerEntity>

@{
    ViewBag.Title = "List Customers";
}

<h2>ListCustomers</h2>

<table>
    <tr>    
        <th>Customer Id</th>  
        <th>Customer Name</th>
    </tr>
    @foreach (var item in Model) {
    
        <tr>
            <td>@Html.DisplayFor(modelItem => item.PkId)</td>
            <td>@Html.DisplayFor(modelItem => item.Name)</td>
        </tr>
    }
</table>